# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (for multilingual support)
OLLAMA_MODEL=llama3.2

# Chrome Configuration (for form parsing)
CHROME_USER_DATA_DIR=C:\Users\YourUsername\AppData\Local\Google\Chrome\User Data
CHROME_PROFILE_NAME=Default
CHROME_BINARY_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe

# Database Configuration
DATABASE_URL=sqlite:///./database/form_parser.db

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000
DEBUG_MODE=true

# Session Configuration
SESSION_TIMEOUT_HOURS=24
CLEANUP_INTERVAL_HOURS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/server.log

# Language Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,te,ta,bn

# Form Parser Configuration
MAX_FORM_SIZE=10MB
FORM_TIMEOUT_SECONDS=30
SCREENSHOT_ENABLED=true
DEBUG_HTML_ENABLED=true

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ENABLED=true
RATE_LIMITING_ENABLED=false

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
